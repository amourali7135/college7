<div class="card-program">
  <%= cl_image_tag program.user.photo.key, height: 300, width: 400, crop: :fill, :alt=>"Business Logo" %>
  <div class="card-program-infos">
    <h2><%= program.title %></h2>
    <p><%= program.headline %></p>
    <p><%= program.description %></p>
    <p><%= program.location %></p>
    <div class="d-flex justify-content-between w-100">
      <p><%= link_to 'See this', program_path(program), data: { turbo: :true }, method: :get %></p>
      <p><%= link_to "Delete this program", program_path(program), method: :delete, data: {confirm: "Are you sure?  This cannot be undone."} %></p>
    </div>
  </div>
</div>
